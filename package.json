{
  "name": "pingpong",
  "version": "1.0.0",
  "description": "A fullstack website built with Bun",
  "type": "module",
  "scripts": {
    "dev": "bun run db:generate && concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "bun run --cwd src/client dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "bun run --cwd src/client build",
    "build:server": "bun build src/server/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "preview": "bun run --cwd src/client preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/server/db/seed.ts",
    "db:reset": "rimraf data/dev.db* && bun run db:push && bun run db:seed"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^3.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "bun-types": "^1.2.20",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}